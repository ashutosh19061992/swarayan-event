<div class="container-fluid"  style="margin-top: 5%;">
   <div class="row text-ligt">
      <div class="col-md-4"></div>
      <div class="col-md-4 h2 text-danger"><b> SUBSCRIPTION REPORT IN DATE RANGE </b></div>
      <div class="col-md-4"></div> 
   </div>
   <div class="row">
         <div class="col-md-1"></div>
         <div class="col-md-10">
            <div class="jumbotron jumbotron-fluid">
                 <div class="container"> 
                     <div class="row">
                        <%= form_tag(url_for(:controller => "subscription_report", :action => "date_range"), :id => "report_filter", class: "form-horizontal", :method => :get) do %>
                          <div class="col-sm-4">
                            <b>From:</b>
                            <div class="form-group">
                              <input type="date" name="subs_from" class="form-control">
                            </div>
                          </div>
                          <div class="col-sm-2"></div>
                          
                          <div class="col-sm-4">
                            <div class="form-group">
                               <b>To:</b> 
                              <input type="date" name="subs_to" class="form-control">
                            </div>
                          </div>
                          <div class="col-sm-2" style="margin-top: 18px;">
                              <input class="btn btn-primary btn-block"  name="commit" type="submit" value="Seach" />
                          </div>
                        <%end%>
                     </div>
                 </div>
              </div>
         </div>
         <div class="col-md-1"></div>
  </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <table class="table table-bordered">
              <thead>
                <tr class="bg-primary">
                  <th scope="col">Date</th>  
                  <th scope="col">Member Name</th>
                  <th scope="col">Product Name</th>
                  <th scope="col">Product Description</th>
                  <th scope="col">Duration(Year)</th>
                  <th scope="col">Status</th>
                </tr>
              </thead>
                <% @subscription_date_range.each do |subscription| %>
                <% @member_name = Member.where(id: subscription.member_id).take.name %>
                <% @product_name = Product.where(id: subscription.product_id).take.name %>
                <% @product_description = Product.where(id: subscription.product_id).take.description %>
                <tbody>
                 <tr class="bg-info"> 
                    <td> <%=  subscription.created_at %></td>
                    <td> <%= @member_name %></td>
                    <td> <%= @product_name %></td>
                    <td> <%= @product_description %></td>
                    <td> <%= subscription.duration %></td>
                    <td> <%= subscription.status %></td>
                 </tr>
               </tbody>
              <% end %>
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
             <%= link_to 'BACK', root_path, class: 'btn btn-primary' %>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
