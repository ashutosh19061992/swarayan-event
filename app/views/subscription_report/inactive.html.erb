<div class="container-fluid"  style="margin-top: 5%;">
   <div class="row text-ligt">
      <div class="col-md-4"></div>
      <div class="col-md-4 h2 text-danger"><b> INACTIVE SUBSCRIPTIONS </b></div>
      <div class="col-md-4"></div> 
   </div>
    <div class="row">
        <div class="col-md-11"></div>
        <div class="col-md-1">
             <%= link_to 'BACK', root_path, class: 'btn btn-primary' %>
        </div>
    </div>
   <div class="row">
         <div class="col-md-1"></div>
         <div class="col-md-10">
            <%  @inactive_subscription.each do |inactive_record| %> 
             <%
                @member_record = Member.where( id: inactive_record.member_id ).take 
                @member_name = @member_record.name
                
                @product_record = Product.where( id: inactive_record.product_id ).take
                @product_name = @product_record.name
             %>
               <div class="jumbotron jumbotron-fluid">
                 <div class="container"> 
                    <p class="lead "><strong>Id:</strong> <%= inactive_record.id  %> </p>
                    <p class="lead "><strong>Status:</strong> <%= inactive_record.status  %> </p>
                    <p class="lead "><strong>Product Name:</strong> <%= @product_name  %> </p>
                    <p class="lead"><strong>MemberName:</strong> <%= @member_name %>  </p>
                    <p class="lead"><strong>Subscribed-At:</strong> <%= inactive_record.subscribed_at %> </p>
                    <p class="lead"><strong>Duration:</strong> <%= inactive_record.duration %></p>
                    <p class="lead"><strong>Created At:</strong> <%= inactive_record.created_at %></p>
                    <p class="lead"><strong>Updated At:</strong> <%= inactive_record.updated_at %></p>
                 </div>
              </div>
            <%  end %> 
         </div>
  </div>
  <div class="col-md-1"></div>
   <script></script>
</div>
